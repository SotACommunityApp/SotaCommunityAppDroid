<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="open_external_irc"
        android:title="Open IRC in External App"
        android:summary="Changes IRC to be opened in external app of choice"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="open_external_news"
        android:title="Open News in Browser"
        android:summary="Open News stories in default browser"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="open_external_calender"
        android:title="Open Calender in Browser"
        android:summary="Open Calender in default browser"
        android:defaultValue="false" />
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="irc_username"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
